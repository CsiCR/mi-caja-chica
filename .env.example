
# Environment variables using dotenv
# https://github.com/motdotla/dotenv

# Prisma / Database (Supabase)
# DATABASE_URL: Transaction Pooler URL (Port 6543)
DATABASE_URL="postgres://[user]:[password]@[host]:6543/postgres?pgbouncer=true"

# DIRECT_URL: Session Pooler / Direct Connection URL (Port 5432)
DIRECT_URL="postgres://[user]:[password]@[host]:5432/postgres"

# Next Auth
# You can generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="super-secret-key-change-me"
NEXTAUTH_URL="http://localhost:3000"

# Seed Configuration
# Set to 'true' to allow database reset in production (DANGEROUS)
ALLOW_PRODUCTION_RESET="false"
# Set to 'production' when deploying
NODE_ENV="development"
